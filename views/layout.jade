doctype html
html
  head
    title= "DERP"
    link(rel='stylesheet', href='/css/style.css')
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    script(src='/js/jquery-1.11.0.min.js')
    script(src='/js/bootstrap.min.js')
  body
    nav(class='navbar navbar-default navbar-static-top', role='navigation')
      div(class='container-fluid')
        div(class='navbar-inner')
          a(class='navbar-brand', href='/')
            img(src='/images/derp.png', style='height: 25px')

        div(class='collapse navbar-collapse')
          ul(class='nav navbar-nav navbar-right')
            if user
              li(class='dropdown navbar-right')
                a(href='#', class='dropdown-toggle', id='dropdownUser', data-toggle='dropdown') #{user.displayName}
                  b(class='caret')
                ul(class='dropdown-menu dropdown-menu-right text-right', role='menu', aria-labelledby='dLabel')
                  li(role='presentation')
                    a(href='/account') Account  
                      span(class='glyphicon glyphicon-user')
                  li(role='presentation')
                    a(href='/logout') Logout  
                      span(class='glyphicon glyphicon-log-out')
              form(class='navbar-form navbar-right', role='search', action='/account', method='GET')
                div(class='form-group')
                  input(type='text', class='form-control', placeholder='Employee Name', name='name')
                  span &nbsp;
                button(type='submit', class='btn btn-default') Search
                span &nbsp;
            else
              li
                a(href='/auth/google') Login  
                  span(class='glyphicon glyphicon-log-in')
    div(class='container-fluid')
      if error
        div(class='row')
          div(class='col-md-8 col-md-offset-2 container')
            div(class='alert alert-danger alert-dismissable')
              button(type='button', class='close', data-dismiss='alert', aria-hidden='true') &times;
              <strong>Oh Snap!</strong> #{error}
      block content
